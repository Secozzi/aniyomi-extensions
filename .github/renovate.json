{
  "extends": [
    "config:recommended"
  ],
  "schedule": ["on sunday"],
  "includePaths": [
    "buildSrc/gradle/**",
    "buildSrc/*.gradle.kts",
    "gradle/**",
    "*.gradle.kts",
    ".github/**"
  ],
  "packageRules": [
    {
      "matchManagers": ["github-actions"],
      "groupName": "{{manager}} dependencies"
    },
    {
      "matchManagers": ["gradle"],
      "enabled": false
    },
    {
      "matchPackageNames": [
        "com.android.tools.build:gradle",
        "gradle"
      ],
      "draftPR": true,
      "enabled": true
    }
  ]
}